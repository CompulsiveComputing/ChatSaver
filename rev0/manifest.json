{
    "manifest_version": 3,
    "name": "ChatSaver",
    "version": "1.0",
    "description": "",
    "icons": {
        "48": "icons/icon.svg",
        "96": "icons/icon.svg"
    },
    "action": {
        "default_icon": {
          "48": "icons/icon.svg"
        },
        "default_popup": "popup.html"
      },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "storage",
        "activeTab",
        "notifications"
    ],
    "background": {
        "scripts": ["background.js"]
      }
}